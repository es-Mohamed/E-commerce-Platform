#!/usr/bin/env bash
# Example environment variables for E-commerce-Platform
# WARNING: Do NOT commit your real SECRET_KEY to source control.
# Use this template as an example and keep real values in a local .env

# Set to 1 to enable debug (development only). Use 0 or unset in production.
export DEBUG=0

# Replace with a strong secret in your deployment (keep secret).
export SECRET_KEY='replace-this-with-a-secure-random-string'

# Space-separated allowed hosts, e.g. "example.com 127.0.0.1"
export DJANGO_ALLOWED_HOSTS='localhost 127.0.0.1'
